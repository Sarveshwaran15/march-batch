public class Zoho_question1 {
    public static void main(String[] args) {
        //gas station problem
        int[] gas = {5,6,7,4};
        int[] cost = {6,7,3,5};
        int result = completeCircle(gas, cost);
        System.out.println("Starting station: " + result);
    }
    static int completeCircle(int[] gas,int[] cost)
    {
        int totalTank = 0;
        int currentTank = 0;
        int startStation = 0;
        for (int i = 0; i < gas.length; i++) {
            int gain = gas[i] - cost[i];
            totalTank += gain;
            currentTank += gain;
            if (currentTank < 0) {
                startStation = i + 1;
                currentTank = 0;
            }
        }
        return totalTank >= 0 ? startStation : -1;
    }
}
